{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure backend",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/backend/build",
                "-S",
                "${workspaceFolder}/backend",
                "-DCMAKE_BUILD_TYPE=Debug"
            ]
        },
        {
            "label": "Build backend",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/backend/build"
            ]
        }
    ]
}
